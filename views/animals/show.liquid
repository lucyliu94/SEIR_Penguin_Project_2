{% layout "layout.liquid" %}
{% block content %}


<link rel="stylesheet" href="/css/show.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<body class="show-page">

<div class="icons">
<a href="/animals/{{animal._id}}/edit" class="btn btn-info btn-sm btn-custom"><span class="glyphicon glyphicon-cog"></span></a>
    <form action="/animals/{{animal._id}}?_method=DELETE" method="post">
    <button class="btn btn-info btn-sm btn-custom" type="submit"><span class="glyphicon glyphicon-trash"></span></button>
</div>

<h1 class="text-center animal-title">{{animal.name}}</h1>

<div class="animal-page">
    <div>
        <img src="{{animal.img}}">
    </div>

    <div class="animal-content">
        <h2 class="text-center">FACTS ABOUT ME</h2><br>
        <div class="list-items"> 
            <ul>
                <li>Gender: {{animal.gender}}</li>
                <li> Age: {{animal.age}}</li>
                <li>Breed: {{animal.breed}}</li>
                <li>Neutered/Spayed; {{animal.neuteredSpayed}}</li>
                <li>On Hold: {{animal.onHold}}</li>
            </ul>
        </div>
        
    </div>
</div>

<div class="show-footer">
    <a href ="/animals">Back to All Animals</a>
</div>

</body>

{% endblock %}
