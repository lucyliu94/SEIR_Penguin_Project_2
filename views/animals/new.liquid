{% layout "layout.liquid" %}
{% block content %}

<form action="/animals" method="POST">
<fieldset>

<legend>Add a New Animal</legend>
    <label>Species: <input type="text" name="species"></label>
    <label>Name: <input type="text" name="name"></label>
    <label>Image: <input type="text" name="img"></label>
    <label>Gender: <input type="text" name="gender"></label>
    <label>Age: <input type="text" name="age"></label>
    <label>Breed: <input type="text" name="breed"></label>
    <label>Neutered/Spayed: <input type="text" name="neutered/spayed"></label>
    <label>On-Hold: <input type="text" name="on-hold"></label>
    <input type="submit" value="Submit New Animal">
</fieldset>

</form>

<a href ="/animals">Back to All Animals</a>


{% endblock %}
